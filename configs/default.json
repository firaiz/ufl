{
  "application" : {
    "encoding" : "utf8",
    "timezone" : "Asia/Tokyo",
    "locale"   : "ja_JP.UTF-8"
  },
  "database" : {
    "dsn" : ""
  },
  "render" : {
    "engine" : "Smarty",
    "headers" : {
      "Cache-Control" : [
        "no-store, no-cache, must-revalidate",
        "post-check=0, pre-check=0"
      ],
      "Pragma" : "no-cache"
    },
    "config" : {
      "general" : {
        "dir" : "storage/template",
        "auto-literal" : true
      },
      "cache" : {
        "use" : false,
        "dir" : "storage/cache",
        "lifetime" : 60
      },
      "compile" : {
        "use-sub-dir" : true,
        "forced" : false,
        "dir"    : "storage/compile"
      },
      "debug" : {
        "use" : false,
        "use-url" : false
      }
    }
  }
}